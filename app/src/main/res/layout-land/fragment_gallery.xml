<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:gravity="center"
    android:padding="12dp"
    android:background="@color/white"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- Заголовок галереи -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="📸 Галерея"
        android:textSize="16sp"
        android:textStyle="bold"
        android:textColor="@color/purple_700"
        android:layout_marginBottom="6dp"
        android:gravity="center"/>

    <!-- Контейнер для изображения с тенью -->
    <FrameLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="6dp"
        android:elevation="4dp">

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="180dp"
            android:layout_height="180dp"
            android:src="@drawable/img1"
            android:contentDescription="@string/app_name"
            android:scaleType="centerCrop"
            android:background="@color/white"
            android:padding="2dp"/>
    </FrameLayout>

    <!-- Подпись к изображению -->
    <TextView
        android:id="@+id/textCaption"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="6dp"
        android:text="Красивый закат"
        android:textSize="12sp"
        android:textStyle="bold"
        android:textColor="@color/purple_700"
        android:gravity="center"
        android:padding="3dp"
        android:paddingStart="6dp"
        android:paddingEnd="6dp"/>

    <!-- Первая строка кнопок -->
    <LinearLayout
        android:orientation="horizontal"
        android:layout_marginTop="8dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <Button
            android:id="@+id/btnPrev"
            android:layout_marginEnd="4dp"
            android:text="◀"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/purple_500"
            android:textColor="@color/white"
            android:minWidth="45dp"
            android:minHeight="35dp"
            android:paddingStart="3dp"
            android:paddingEnd="3dp"
            android:textSize="10sp"/>

        <Button
            android:id="@+id/btnNext"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="4dp"
            android:backgroundTint="@color/teal_700"
            android:text="▶"
            android:textColor="@color/white"
            android:minWidth="45dp"
            android:minHeight="35dp"
            android:paddingStart="3dp"
            android:paddingEnd="3dp"
            android:textSize="10sp"/>

        <Button
            android:id="@+id/btnRandom"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:background="@null"
            android:padding="3dp"
            android:text=""
            android:foreground="@drawable/iconrandom"
            android:backgroundTint="@null"/>

    </LinearLayout>

    <!-- Информация о текущем изображении -->
    <TextView
        android:id="@+id/textImageInfo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="6dp"
        android:text="Изображение 1 из 5"
        android:textSize="10sp"
        android:textColor="@color/purple_700"
        android:gravity="center"/>
</LinearLayout>
